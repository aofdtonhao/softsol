<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Culturas"
		android:textSize="50sp" android:textStyle="bold">
	</TextView>
	<LinearLayout android:layout_height="wrap_content" android:gravity="right"
		android:layout_width="match_parent">
		<Button android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:onClick="onBackClick" android:height="50sp" android:width="200sp" android:text="Voltar">
        </Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:onClick="onAddCultureClick" android:height="50sp" android:width="200sp" android:text="Nova Cultura">
		</Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:layout_width="wrap_content"
			android:text="Lista de Culturas" android:textStyle="bold"
			android:layout_height="wrap_content" android:textSize="20sp">
		</TextView>
		<ListView android:layout_width="match_parent" android:id="@android:id/list"
			android:layout_height="wrap_content">
		</ListView>
	</LinearLayout>
</LinearLayout>
